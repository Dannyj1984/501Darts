<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Menu"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    android:weightSum="4">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/chooseP1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Choose player one"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spinnerP1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:entries="@array/name_Array"
            ></Spinner>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/chooseP2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Choose player two"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_weight="1"
            />

        <Spinner
            android:id="@+id/spinnerP2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/chooseP2"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:entries="@array/name_Array"
            android:spinnerMode="dropdown">

        </Spinner>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Start Game"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/falseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </RelativeLayout>



</LinearLayout>